{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "sourceMap": true,

    "strict": false,                      
    "exactOptionalPropertyTypes": false,   
    "noUncheckedIndexedAccess": false,    
    
    "types": ["jest", "node"]
  }
}